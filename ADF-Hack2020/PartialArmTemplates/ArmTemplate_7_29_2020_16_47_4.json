{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ADF-Hack2020"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/InputMiabJson')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "gen2hackStoreDataSet",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "Json",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"folderPath": "iot-hub-output",
						"container": "messagefiles"
					}
				},
				"schema": {
					"type": "object",
					"properties": {
						"NodeId": {
							"type": "string"
						},
						"ApplicationUri": {
							"type": "string"
						},
						"Value": {
							"type": "object",
							"properties": {
								"Value": {
									"type": "integer"
								},
								"SourceTimestamp": {
									"type": "string"
								}
							}
						}
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/JsonToCSVConvertor')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureFunction",
				"typeProperties": {
					"functionAppUrl": "https://jsontocsvconvertor.azurewebsites.net",
					"functionKey": {
						"type": "SecureString",
						"value": "**********"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/BlobStorageTrigger')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "BlobStorageTrigger to convert Base64 to string ",
				"annotations": [],
				"runtimeState": "Stopped",
				"pipelines": [],
				"type": "BlobEventsTrigger",
				"typeProperties": {
					"blobPathBeginsWith": "/messagefiles/blobs/iot-hub-hack",
					"ignoreEmptyBlobs": true,
					"scope": "/subscriptions/901ba023-b9b4-4c6d-9494-916872c2c164/resourceGroups/Hack/providers/Microsoft.Storage/storageAccounts/gen2hackstore",
					"events": [
						"Microsoft.Storage.BlobCreated"
					]
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/pl_cncdataloadtocdm')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "df_cdmload",
						"type": "ExecuteDataFlow",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"dataflow": {
								"referenceName": "df_cdmload_cncstatus",
								"type": "DataFlowReference"
							},
							"compute": {
								"coreCount": 8,
								"computeType": "General"
							}
						}
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/dataflows/df_cdmload_cncstatus')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/df_cdmload_cncstatus')]",
			"type": "Microsoft.DataFactory/factories/dataflows",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "MappingDataFlow",
				"typeProperties": {
					"sources": [
						{
							"dataset": {
								"referenceName": "ds_cncstatus",
								"type": "DatasetReference"
							},
							"name": "srccncstatus"
						}
					],
					"sinks": [
						{
							"linkedService": {
								"referenceName": "gen2hackstore",
								"type": "LinkedServiceReference"
							},
							"schemaLinkedService": {
								"referenceName": "gen2hackstore",
								"type": "LinkedServiceReference"
							},
							"name": "loadcncstatus"
						}
					],
					"transformations": [],
					"script": "source(output(\n\t\t{$dtid} as string,\n\t\t{$timestamp} as string,\n\t\tSequentialNumber as string,\n\t\tEMT as string,\n\t\tCreateTime as string,\n\t\tStatus as string,\n\t\tErrorCode as string,\n\t\tTotalNum as string,\n\t\tCategory as string,\n\t\tEventTime as string\n\t),\n\tallowSchemaDrift: true,\n\tvalidateSchema: false) ~> srccncstatus\nsrccncstatus sink(allowSchemaDrift: true,\n\tvalidateSchema: false,\n\tentity: 'dtmi_jabil_hackathon_cnc_status-1.cdm.json',\n\tformat: 'cdm',\n\tcorpusPath: 'jabilcdm',\n\tfolderPath: 'jabilcdm/dtmi_jabil_hackathon_cnc_status-1',\n\tfileSystem: 'cdm',\n\tcolumnDelimiter: ',',\n\tcolumnNamesAsHeader: false,\n\tcorpusStore: 'adlsgen2',\n\tadlsgen2_fileSystem: 'cdm',\n\tmapColumn(\n\t\t{$dtid},\n\t\t{$timestamp},\n\t\tSequentialNumber,\n\t\tEMT,\n\t\tCreateTime,\n\t\tStatus,\n\t\tErrorCode,\n\t\tTotalNum,\n\t\tCategory,\n\t\tEventTime\n\t),\n\tskipDuplicateMapInputs: true,\n\tskipDuplicateMapOutputs: true) ~> loadcncstatus"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/ds_cncstatus')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ds_cncstatus')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "gen2hackstore",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"fileName": "*.csv",
						"folderPath": "cncstatus",
						"fileSystem": "cnctransformeddata"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "$dtid",
						"type": "String"
					},
					{
						"name": "$timestamp",
						"type": "String"
					},
					{
						"name": "SequentialNumber",
						"type": "String"
					},
					{
						"name": "EMT",
						"type": "String"
					},
					{
						"name": "CreateTime",
						"type": "String"
					},
					{
						"name": "Status",
						"type": "String"
					},
					{
						"name": "ErrorCode",
						"type": "String"
					},
					{
						"name": "TotalNum",
						"type": "String"
					},
					{
						"name": "Category",
						"type": "String"
					},
					{
						"name": "EventTime",
						"type": "String"
					}
				]
			},
			"dependsOn": []
		}
	]
}